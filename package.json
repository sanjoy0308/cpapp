{
    "name": "cpapp",
    "version": "1.0.0",
    "description": "A simple CAP project.",
    "repository": "<Add your repository here>",
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@sap/cds": "^7.0.0",
        "@sap/xssec": "^3.2.17",
        "express": "^4.18.2",
        "hdb": "^0.19.5",
        "mbt": "^1.2.23",
        "passport": "^0.6.0",        
        "wget": "^0.0.1"
    },
    "devDependencies": {
        "@sap/ux-specification": "^1.108.7",
        "rimraf": "^5.0.1",
        "sqlite3": "^5.1.6"
    },
    "engines": {
        "node": "^18"
    },
    "scripts": {
        "start": "cds run",
        "cleanup": "rm -rf node_modules && rm -rf */node_modules && rm -rf */*/node_modules && rm -rf package-lock.json && rm -rf */package-lock.json && rm -rf */*/package-lock.json",
        "watch-risks": "cds watch --open risks/webapp/index.html?sap-ui-xx-viewCache=false",
        "watch-mitigations": "cds watch --open mitigations/webapp/index.html?sap-ui-xx-viewCache=false",
        "undeploy": "cf undeploy cpapp --delete-services --delete-service-keys --delete-service-brokers",
        "build": "rimraf resources mta_archives && mbt build --mtar archive",
        "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
    },
    "eslintConfig": {
        "extends": "eslint:recommended",
        "env": {
            "es2020": true,
            "node": true,
            "jest": true,
            "mocha": true
        },
        "globals": {
            "SELECT": true,
            "INSERT": true,
            "UPDATE": true,
            "DELETE": true,
            "CREATE": true,
            "DROP": true,
            "CDL": true,
            "CQL": true,
            "CXL": true,
            "cds": true
        },
        "rules": {
            "no-console": "off",
            "require-atomic-updates": "off"
        }
    },
    "sapux": [
        "app/risks",
        "app/mitigations"
    ],
    "cds": {
        "requires": {
            "[production]": {
                "db": "hana-cloud",
                "auth": "xsuaa"
            },
            "db": "sql"
        }
    }
}
